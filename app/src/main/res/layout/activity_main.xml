<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:padding="20dp">

    <!-- 顶部标题栏 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notepad"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/title_text"
        android:background="@drawable/bg_title_card"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp" />

    <!-- 搜索框（带图标） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_card"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/chip_stroke" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="搜索内容"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:textColor="@color/title_text"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <!-- 搜索历史 Chip -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <!-- 分类下拉 -->
    <Spinner
        android:id="@+id/spFilterCategory"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_chip"
        android:layout_marginBottom="14dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:spinnerMode="dropdown"/>

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="14dp">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="46dp"
            android:text="新增笔记"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_ripple"
            android:textColor="@color/btn_text"
            android:layout_marginEnd="10dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnRecycleBin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="46dp"
            android:text="回收站"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_ripple"
            android:textColor="@color/btn_text"
            android:layout_marginStart="10dp"
            android:elevation="2dp"/>
    </LinearLayout>

    <!-- 笔记列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:clipToPadding="false"
        android:layout_marginBottom="16dp"/>

    <!-- 日夜模式切换（单按钮居中） -->
    <Button
        android:id="@+id/btnNightMode"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="日/夜切换"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_ripple"
        android:textColor="@color/btn_text"
        android:layout_gravity="center_horizontal"
        android:elevation="2dp"/>
</LinearLayout>